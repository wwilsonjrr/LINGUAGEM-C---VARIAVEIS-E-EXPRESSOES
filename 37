/*  37. Fa√ßa um programa que leia o valor de um produto e imprima o valor com desconto, tendo
 em vista que o desconto foi de 12%  */



#include <stdio.h>
#include <stdlib.h>

int main()
{
    float Valor_produto, Valor_desconto;

    printf("Digite o valor do produto: \n");
    scanf("%f", &Valor_produto);
    Valor_desconto = Valor_produto - Valor_produto*0.12;

    printf("O valor com desconto vale: %.2f \n", Valor_desconto);

    system("pause");
    return 0;
}
