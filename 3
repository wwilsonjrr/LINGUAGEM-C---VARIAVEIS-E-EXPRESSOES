 /*  3. Peça ao usuário para digitar três valores inteiros e imprima a soma deles.  */

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int A, B, C, soma;

    printf("Digite 3 numeros inteiros respectivamente: \n");
    scanf("%d %d %d", &A, &B, &C);
    soma = (A + B + C);

    printf("A soma dos 3 numeros foram: %d \n", soma);

    system("pause");
    return 0;
}
